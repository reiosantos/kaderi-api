{
  "name": "kaderi-api",
  "version": "1.0.0",
  "private": true,
  "author": "reio santos",
  "main": "app/main.js",
  "scripts": {
    "serve": "babel-node lib/app/server.js",
    "build": "rimraf lib/ && babel ./ --out-dir lib/ --ignore ./node_modules",
    "start": "NODE_ENV=production yarn run build && yarn run serve",
    "start:dev": "NODE_ENV=development DEBUG=kaderi nodemon --exec babel-node app/server.js",
    "lint": "node_modules/.bin/eslint ./src",
    "test": "mocha --compilers js:@babel/register",
    "test:coverage": "nyc --reporter=html --reporter=text mocha --require @babel/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reiosantos/kaderi-api.git"
  },
  "homepage": "https://github.com/reiosantos/kaderi-api#readme",
  "bugs": {
    "url": "https://github.com/reiosantos/kaderi-api/issues"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/**/*.js",
      "!app/main.js",
      "!app/server.js",
      "!**/__tests__/**/*.js?(x)"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/?(*.)(spec|test)js",
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "testEnvironment": "node"
  },
  "commitplease": {
    "style": "angular",
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "chore"
    ],
    "scope": "\\S+.*"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "cors": "^2.8.5",
    "debug": "~2.2.0",
    "dotenv": "^6.2.0",
    "express": "~4.13.1",
    "morgan": "~1.6.1",
    "nodemon": "^1.18.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2"
  }
}
